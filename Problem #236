/**
 * Definition for a binary tree node.
 * struct TreeNode {
 *     int val;
 *     TreeNode *left;
 *     TreeNode *right;
 *     TreeNode(int x) : val(x), left(NULL), right(NULL) {}
 * };
 */
class Solution {
public:
    TreeNode* lowestCommonAncestor(TreeNode* root, TreeNode* p, TreeNode* q) {
        
        // Base cases:
        // If we reach NULL, or the current node is p or q, return current node.
        if (root == nullptr || root == p || root == q)
            return root;

        // Search for p and q in the left and right subtrees
        TreeNode* left = lowestCommonAncestor(root->left, p, q);
        TreeNode* right = lowestCommonAncestor(root->right, p, q);

        // If both sides returned a node,
        // it means p and q were found in different branches.
        // So this root is the LCA.
        if (left != nullptr && right != nullptr)
            return root;

        // Otherwise return whichever side is non-null.
        // (If both are null, returns null.)
        if (left == nullptr) {
          return right;   // nothing on left, return whatever right found
        } else {
          return left;    // left found p or q, return it
       }
    }
};
